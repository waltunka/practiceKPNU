public class BitCounting {

  public static int countBits(int n){
    
    String binaryNum = Integer.toBinaryString(n);
        
        int ones = 0;
        for (int i = 0; i < binaryNum.length(); i++) {
          if (binaryNum.charAt(i) == '1') {
            ones++;
          }
        }       
        return ones;
  }
  
}
